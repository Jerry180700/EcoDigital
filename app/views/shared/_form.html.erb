<%= form_with(model: post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, 'Title' %>
    <%= form.text_field :title, class: "form-control", placeholder: "I'm thinking in..." %>
  </div>

  <div class="form-group">
    <%= form.label :body, 'Content' %>
    <%= form.text_area :body, rows: 10, class: "form-control", placeholder: "Tell us more about that!" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary w-100" %>
  </div>
<% end %>
