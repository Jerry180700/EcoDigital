<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-5">
        <div class="card-body text-center">
          <h2 class="m-4">Forgot your password?</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field m-4">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "eco@digital.com" %>
            </div>

            <div class="actions m-4">
              <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
            </div>
          <% end %>

          <div class="m-4"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
